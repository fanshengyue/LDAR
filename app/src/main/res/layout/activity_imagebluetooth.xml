<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/titlebar_top_layout"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_imgname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                />
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_250"
                android:src="@drawable/default_img"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_50"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_10"
                android:paddingRight="@dimen/dimen_dp_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dimen_dp_5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="组件编号："/>
                    <TextView
                        android:id="@+id/tv_imgnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen_dp_5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="上次净检测值："/>
                    <TextView
                        android:id="@+id/tv_lastnum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_50"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_10"
                android:paddingRight="@dimen/dimen_dp_10"
                android:layout_marginRight="@dimen/dimen_dp_5"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="净检值："/>
                    <EditText
                        android:id="@+id/et_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:editable="false"
                        android:background="@drawable/bg_edittext"
                        android:layout_marginTop="@dimen/dimen_dp_10"
                        android:layout_marginBottom="@dimen/dimen_dp_10"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen_dp_5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="最大值："/>
                    <EditText
                        android:id="@+id/et_max"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:editable="false"
                        android:background="@drawable/bg_edittext"
                        android:layout_marginTop="@dimen/dimen_dp_10"
                        android:layout_marginBottom="@dimen/dimen_dp_10"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_50"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:layout_marginRight="@dimen/dimen_dp_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="状 态："/>
                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_50"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/bt_start"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_dp_30"
                        android:background="@drawable/bg_border_button"
                        android:textColor="@color/white"
                        android:text="开 始"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/bt_stop"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_dp_30"
                        android:background="@drawable/bg_border_button"
                        android:textColor="@color/white"
                        android:text="停 止"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_50"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_dp_10">
                <Button
                    android:id="@+id/bt_save"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_dp_40"
                    android:paddingLeft="@dimen/dimen_dp_10"
                    android:paddingRight="@dimen/dimen_dp_10"
                    android:background="@drawable/bg_border_button"
                    android:textColor="@color/white"
                    android:text="保 存"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
